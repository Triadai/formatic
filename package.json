{
  "name": "formatic",
  "version": "0.3.7",
  "description": "Automatic, pluggable form generation",
  "main": "./build/lib/formatic",
  "scripts": {
    "test": "jest",
    "build": "babel lib --out-dir build/lib",
    "docs-build": "gulp docs-build",
    "docs-publish": "gulp docs-publish",
    "live": "node server.js",
    "patch-release": "npm version patch && npm publish && git push --follow-tags",
    "start": "node server.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:zapier/formatic.git"
  },
  "license": "MIT",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-core": "^6.5.2",
    "babel-eslint": "^5.0.0",
    "babel-loader": "^6.2.3",
    "babel-plugin-lodash": "^1.1.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "css-loader": "^0.23.1",
    "es6-promise": "^3.0.2",
    "eslint": "^1.2.1",
    "eslint-loader": "^1.1.1",
    "eslint-plugin-react": "^2.3.0",
    "react": "^0.14.3",
    "react-addons-test-utils": "^0.14.3",
    "react-dom": "^0.14.3",
    "react-hot-loader": "^1.3.0",
    "react-tools": "^0.12.2",
    "style-loader": "^0.13.0",
    "webpack": "^1.9.6",
    "webpack-dev-server": "^1.8.2"
  },
  "dependencies": {
    "classnames": "^2.1.1",
    "deep-equal": "^1.0.0",
    "lodash": "^4.5.0",
    "object-assign": "^2.0.0",
    "react": "^0.14.7",
    "react-addons-css-transition-group": "^0.14.3",
    "recompose": "^0.15.0"
  },
  "peerDependencies": {
    "react": ">=0.14"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules",
      "<rootDir>/index.js",
      "<rootDir>/lib",
      "<rootDir>/build"
    ],
    "testPathDirs": [
      "__tests__"
    ]
  },
  "browserify": {
    "transform": [
      "babelify",
      "browserify-shim",
      "brfs"
    ]
  },
  "browserify-shim": {
    "react": "global:React",
    "react-addons-css-transition-group": "global:React.addons.CSSTransitionGroup",
    "react-dom": "global:ReactDOM",
    "underscore": "global:_",
    "codemirror": "global:CodeMirror"
  }
}
